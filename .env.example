# Example .env for telegram-downloader
# Copy this file to .env and fill values (do NOT commit .env)

# --- Telegram API credentials ---
API_ID=your_api_id
API_HASH=your_api_hash
BOT_TOKEN=your_bot_token
ADMIN_ID=your_user_id

# --- Runtime options ---
MAX_NUM=10
LOG_LEVEL=INFO
DOWNLOAD_ALL=false
WHITE_LIST=
WHITELIST_FILE=.session/whitelist.txt

# --- Download timeout and health check ---
DOWNLOAD_TIMEOUT=1800
HEALTH_CHECK_INTERVAL=300
MAX_IDLE_TIME=600
MAX_RETRIES=3

# --- Scanning & Throttling ---
SCAN_BATCH_SIZE=100
DOWNLOAD_BATCH_SIZE=50

# --- Progress Tracking ---
PROGRESS_DIR=.session/progress
PROGRESS_REPORT_INTERVAL=600
AUTO_RESUME=false
REPORT_PERCENT_STEP=1
REPORT_MIN_INTERVAL=180 # Minimum interval between progress reports in seconds

# --- Filter settings ---
FILTER_LIST=
FILTER_FILE_TYPE=

# --- Upload / rclone settings ---
UPLOAD_FLAG=false
DRIVE_NAME=
DRIVE_PATH=
OPERATE=move

# --- Proxy settings (optional) ---
# SOCKS5_PROXY=socks5://user:pass@127.0.0.1:1080
# HTTP_PROXY=http://127.0.0.1:8080
